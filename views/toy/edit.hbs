<div class="container text-center mt-3 mb-3 col-md-8">
    <form class="card bg-light ml-3 mr-3" action="/toy/edit/{{toy._id}}" method="post">
        <h1 class="text text-primary mt-2 mb-2">Edit Toy</h1>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Toy Name</label>
            <input class="form-control" type="text" name="Name" value={{ toy.Name }} required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Toy Image</label>
            <img src="{{ toy.Image }}" width="150" height="200">
            <input class="form-control" type="text" name="Image" value={{ toy.Image }} required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Quality</label>
            <input class="form-control" type="text" name="Quality" value={{ toy.Quality}} required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Qrigin</label>
            <input class="form-control" type="text" name="Qrigin" value={{ toy.Qrigin}} required>
        </div>
        <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Price</label>
            <input class="form-control" type="text" name="Price" value={{ toy.Price }} required>
        </div>
    <select id="type" name="type"> 
        <option>Product1 : Electronics </option>
        <option>Product2 : Sports </option>
    </select>
        <div class="form-group mt-2 mb-2">
            <input class="btn btn-danger" type="submit" value="Edit">
        </div>

    </form>
</div>