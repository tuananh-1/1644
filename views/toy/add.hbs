<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/toy/add" method="post">
      <h1 class="text text-primary mt-2 mb-2">Add new toy</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Name</label>
         <input class="form-control" type="text" name="Name" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Image</label>
         <input class="form-control" type="text" name="Image" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Quality</label>
         <input class="form-control" type="text" name="Quality" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="text" name="Price" required>
      </div>
      <select id="type" name="type"> 
      <option>Product1 : Electronics </option>
      <option>Product2 : Sports </option>
</select>
    
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
   </form>
</div>